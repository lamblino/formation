{%extends"base.html.twig"%}

	{% block showonclick %}
				<div class="category-nav">
				<span class="category-header">{{ categorieshead.title }} </span>
                {% endblock %}
{% block bread %}
	<!-- HOME -->
	<div id="home">
		<!-- container -->
		<div class="container">
			<!-- home wrap -->
			<div class="home-wrap">
				<!-- home slick -->
				<div id="home-slick">
					<!-- banner -->
					{% for index_banners in index_banner.account %}
					{%  if  loop.index  == 1 %} 
					<div class="banner banner-1">
						<img src="{{ index_banners.URL }}"alt="">
						<div class="banner-caption text-center">
							<h1>{{ index_banners.name }}</h1>
							<h3 class="white-color font-weak">{{ index_banners.h3 }}</h3>
							<button class="primary-btn">{{ index_banners.button }}</button>
						</div>
					</div>
					<!-- /banner >-->
			{%  elseif  loop.index  == 2 %} 
					<!-- banner -->
					<div class="banner banner-1">
						<img src="{{ index_banners.URL }}" alt="">
						<div class="banner-caption">
							<h1 class="primary-color">{{ index_banners.name }}<br><span class="white-color font-weak">{{ index_banners.span }}</span></h1>
							<button class="primary-btn">{{ index_banners.button }}</button>
						</div>
					</div>
					<!-- /banner -->
						{%   else %}
					<!-- banner -->
					<div class="banner banner-1">
						<img src="{{ index_banners.URL }}" alt="">
						<div class="banner-caption">
							<h1 class="white-color">{{ index_banners.name }} <span>{{ index_banners.span }}</span></h1>
							<button class="primary-btn">{{ index_banners.button }}</button>
						</div>
					</div>
					{%   endif %}
					{%  endfor %}
					<!-- /banner -->
				</div>
				<!-- /home slick -->
			</div>
			<!-- /home wrap -->
		</div>
		<!-- /container -->
	</div>
	<!-- /HOME -->

	<!-- section -->
	<div class="section">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- banner -->
				{% for index_section_banners in index_section_banner.account %}
				<div class="col-md-4 col-sm-6">
					<a class="banner banner-1" href="#">
						<img src="{{ index_section_banners.URL }}" alt="">
						<div class="banner-caption text-center">
							<h2 class="white-color">{{ index_section_banners.name }}</h2>
						</div>
					</a>
				</div>
				{% endfor %}

			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
	<!-- /section -->

	<!-- section -->
	<div class="section">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- section-title -->
				<div class="col-md-12">
					<div class="section-title">
						<h2 class="title">{{ index_deals_banner.title }}</h2>
						<div class="pull-right">
							<div class="product-slick-dots-1 custom-dots"></div>
						</div>
					</div>
				</div>
				<!-- /section-title -->
				{% for index_deals_banners in index_deals_banner.account %}
				<!-- banner -->
				<div class="col-md-3 col-sm-6 col-xs-6">
					<div class="banner banner-2">
						<img src="{{ index_deals_banners.URL }}" alt="">
						<div class="banner-caption">
							<h2 class="white-color">{{ index_deals_banners.name }}</h2>
							<button class="primary-btn">{{ index_deals_banners.button }}</button>
						</div>
					</div>
				</div>
				{% endfor %}
				<!-- /banner -->

				<!-- Product Slick -->
				
				<div class="col-md-9 col-sm-6 col-xs-6">
				
					<div class="row">
					
					
						<div id="product-slick-1" class="product-slick">
							<!-- Product Single -->
							
							{% for articles in articledeal %}
							
						
				
				<div class="col-md-3 col-sm-6 col-xs-6">
					<div class="product product-single">
					
						<div class="product-thumb">
							{% if articles.new is not empty or articles.reduction is not empty %}
							<div class="product-label">
                            {% if articles.new == "oui" %}
								<span>New</span>
							{% endif %}
							{% if articles.reduction is not empty %}
								<span class="sale">{{ articles.reduction }}</span>

								
							{% endif %}
							</div>
								<ul class="product-countdown" id="countdown" name = "{{ "3" }}">
								
										
										<li><span id="counth"></span></li>
										<li><span id="countm"></span></li>
										<li><span id="counts"></span></li>
									</ul>
					        {% endif %}
					   
							<a href="/product-page/{{ articles.id }}" class="main-btn quick-view" ><i class="fa fa-search-plus"></i> Quick view</a>
						
							<img src={{asset("uploads/image/" ~ articles.image.lien) }} alt="">
						</div>
						<div class="product-body">
							<h3 class="product-price">{{ articles.prix }} â‚¬</h3>
							<div class="product-rating">
								<i class="fa fa-star"></i>
								<i class="fa fa-star"></i>
								<i class="fa fa-star"></i>
								<i class="fa fa-star"></i>
								<i class="fa fa-star-o empty"></i>
							</div>
							<h2 class="product-name" id="compteur"><a href="/product-page/{{ articles.id }}">{{ articles.nom }}</a></h2>
								<script></script>
							<div class="product-btns">
								<button class="main-btn icon-btn"><i class="fa fa-heart"></i></button>
								<button class="main-btn icon-btn"><i class="fa fa-exchange"></i></button>
								<button class="primary-btn add-to-cart"><i class="fa fa-shopping-cart"></i> Add to Cart</button>
							</div>
						</div>
					</div>
				</div>
							{% endfor %}	
							<!-- /Product Single -->
							</div>
							
							
				<!-- /Product Slick -->
			</div>
		
			<!-- /row -->


		</div>
		<!-- /container -->
	</div>
	<!-- /section -->

	<!-- section -->
	<div class="section section-grey">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- banner -->
				<div class="col-md-8">
					<div class="banner banner-1">
				{% for index_sectiongrey_banners1 in index_sectiongrey_banner1  %}
						<img src="{{ index_sectiongrey_banners1.URL }}" alt="">
						<div class="banner-caption text-center">
							<h1 class="primary-color">{{ index_sectiongrey_banners1.name }}L<br><span class="white-color font-weak">{{ index_sectiongrey_banners1.span }}</span></h1>
							<button class="primary-btn">{{ index_sectiongrey_banners1.button }}</button>
						</div>
				{% endfor %}		
					</div>
				</div>
				<!-- /banner -->

				<!-- banner -->
				{% for index_sectiongrey_banners in index_sectiongrey_banner.account %}
				<div class="col-md-4 col-sm-6">
					<a class="banner banner-1" href="#">
						<img src="{{ index_sectiongrey_banners.URL}}" alt="">
						<div class="banner-caption text-center">
							<h2 class="white-color">{{ index_sectiongrey_banners.name }}</h2>
						</div>
					</a>
				</div>
				{% endfor %}
				<!-- /banner -->

			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
	<!-- /section -->

	<!-- section -->
	<div class="section">
		<!-- container -->
		<div class="container">
			<!-- row -->
			<div class="row">
				<!-- section title -->
			{% for index_latest_products in index_latest_product.account %}	
				<div class="col-md-12">
					<div class="section-title">
						<h2 class="title">{{index_latest_product.title  }}</h2>
					</div>
				</div>
				<!-- section title -->

				<!-- Product Single -->
							
                            {% for articles in articlesnew %}
                           
							{% if loop.index == 5 %}
							<div class="row">
				<!-- banner -->
				<div class="col-md-3 col-sm-6 col-xs-6">
					<div class="banner banner-2">
						<img src="{{index_latest_products.URL  }}" alt="">
						<div class="banner-caption">
							<h2 class="white-color">{{index_latest_products.name  }}</h2>
							<button class="primary-btn">{{index_latest_products.button  }}</button>
						</div>
					</div>
				</div>
							{%  endif %}
							
							{% include 'productsingle.php.twig' %}
							
							{% endfor %}	
				
			</div>
			{% endfor %}
			</div>
			<!-- /row -->

			<!-- row -->

				<!-- /banner -->

				

			<!-- row -->
			<div class="row">
				<!-- section title -->
				<div class="col-md-12">
					<div class="section-title">
						<h2 class="title">Picked For You</h2>
					</div>
				</div>
				<!-- section title -->

				<!-- Product Single -->
				
					        {% for articles in article %}
					       
					        {% if loop.index < 5 %}
							
							{% include 'productsingle.php.twig' %}
							
								{%  endif %}
								
							{% endfor %}	
						
				<!-- /Product Single -->
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
	<!-- /section -->

{% endblock %}






